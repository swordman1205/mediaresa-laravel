{% macro search(label, fieldName, options, params) %}
    {% import 'main.partials.form_layout' as form_layout %}
    {% if params.allLabel is not empty %}
        {% set datas = [{value : 'all', name: params.allLabel}] %}
    {% else %}
        {% set datas = [{value : 'all', name: 'Tout'}] %}
    {% endif %}
    {% for option in options %}
        {% set datas = datas|merge([{value : option.slug, name: option.name}]) %}
    {% endfor %}
    {{ form_layout.select(label, fieldName, datas, params) }}
{% endmacro %}

